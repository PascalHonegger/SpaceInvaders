<UserControl x:Class="SpaceInvaders.Control.ShipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ship="clr-namespace:SpaceInvaders.Ship"
             xmlns:control="clr-namespace:SpaceInvaders.Control"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance ship:ShipBase }">
	<control:AnimatedImageControl x:Name="AnimatedImageControl">
		<control:AnimatedImageControl.Triggers>
			<EventTrigger RoutedEvent="Rectangle.MouseEnter">
				<BeginStoryboard>
					<Storyboard>
						<DoubleAnimation
							Storyboard.TargetName="ShipTexture"
							Storyboard.TargetProperty="Opacity"
							From="1" To="0" />
					</Storyboard>
				</BeginStoryboard>
			</EventTrigger>
		</control:AnimatedImageControl.Triggers>
	</control:AnimatedImageControl>
</UserControl>